{
  "compilerOptions": {
    // Node ESM
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Versi√≥n moderna de JS
    "target": "ES2022",
    "lib": ["ES2022"],

    // Carpeta de salida si compilas con `tsc`
    "rootDir": "./",
    "outDir": "./dist",

    // Soporte para imports modernos con `.js`
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Estricto pero sencillo
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Mapas (opcional)
    "sourceMap": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
